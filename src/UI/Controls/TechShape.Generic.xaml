<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DIPS.UI.Controls">
    <Style TargetType="{x:Type controls:TechShape}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:TechShape}">
                        <Grid>
                            <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="71" VerticalAlignment="Top" Width="110">
                                <Rectangle x:Name="rect" Fill="LightBlue" HorizontalAlignment="Left" Height="51" Stroke="Black" VerticalAlignment="Top" Width="92" Canvas.Left="10" Canvas.Top="10" AllowDrop="False"/>
                                <Label x:Name="lblTechName" HorizontalAlignment="Center" VerticalAlignment="Top" Height="23" Width="43" Canvas.Left="35" Canvas.Top="24" Content="{Binding RelativeSource={RelativeSource AncestorType=controls:TechShape}, Path=TechniqueName}"/>
                            </Canvas>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>