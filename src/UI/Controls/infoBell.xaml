<UserControl x:Class="DIPS.UI.Controls.infoBell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="42.055" Width="43.666">
    <Grid x:Name="imgBell" MouseLeave="imgBell_MouseLeave" Margin="10,10,0,0">
        <TextBox Visibility="Hidden" Name="txtInfoText" HorizontalAlignment="Left" Height="86" Margin="45,-28,-153,-26" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="142" Background="#FFDEDEDE" BorderBrush="{x:Null}" Loaded="txtInfoText_Loaded"/>
        <Image x:Name="imgBell1" Source="../Images/bell.png" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="24" RenderTransformOrigin="1.583,0.84" Stretch="None" Margin="6,6,0,0" MouseEnter="imgBell1_MouseEnter"/>

    </Grid>
</UserControl>
