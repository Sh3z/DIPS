<Window x:Class="DIPS.UI.MainNavi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DIPS.UI.Controls"
        Title="{Binding Path=Content.Title, ElementName=MainNavi}" Height="400" Width="800" WindowState="Maximized" DataContext="{Binding Main,Source={StaticResource Locator}}">
    <DockPanel LastChildFill="True" Background="#FFD4CDFF">
        <controls:NavBar DockPanel.Dock="Top" />
        <Frame Name="MainNaviControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Content="{Binding ViewModel}" />
    </DockPanel>

</Window>
