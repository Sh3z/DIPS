<UserControl x:Class="DIPS.UI.Pages.ViewExistingDataSet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d"
	 Width="984.956" Height="447.761">
    <UserControl.Resources>
        <Style x:Key="ButtonImage" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Image Name="processedImg" Source="{Binding Content, RelativeSource={RelativeSource AncestorType={x:Type Button}, Mode=FindAncestor}}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>



    <Grid Margin="10,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Border x:Name="brdUnprocessed" 
    		BorderThickness="2"
    		BorderBrush="#FF000000"
    		VerticalAlignment="Top"
    		HorizontalAlignment="Left"
    		Margin="318,22,0,0"
    		Height="128" 
    		Width="128">

            <Button Style="{StaticResource ButtonImage}"
    			Content="{Binding ToProcessSource}" Margin="267,3,-267,-3" />


        </Border>
        <xctk:PropertyGrid x:Name="_propertyGrid" Margin="766,22,10,115"
                                     AutoGenerateProperties="True" IsManipulationEnabled="True"/>
        <Border x:Name="brdProcessed" 
    		BorderThickness="2"
    		BorderBrush="#FF000000"
    		VerticalAlignment="Top"
    		HorizontalAlignment="Left"
    		Margin="582,22,0,0"
    		Height="128" 
    		Width="128">
            <Button Style="{StaticResource ButtonImage}"
    			Content="{Binding ProcessedSource}" Margin="-114,180,114,-180" />
        </Border>

        <Label x:Name="lblToProcess" Content="----&gt;" HorizontalAlignment="Left" Margin="504,80,0,0" VerticalAlignment="Top" Height="26" Width="37"/>
        <TreeView x:Name="treeDatasets" HorizontalAlignment="Left" Height="358" Margin="26,56,0,0" VerticalAlignment="Top" Width="196" MouseDoubleClick="treeDatasets_MouseDoubleClick"/>
        <Button x:Name="btnProcess" Content="Process" HorizontalAlignment="Left" Margin="439,358,0,0" VerticalAlignment="Top" Width="143" Command="{Binding ProcessImageCommand}" Height="60"/>
        <Image Name="unProcessedImg" HorizontalAlignment="Left" Height="128" Margin="318,22,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBox x:Name="txtImageDesc" HorizontalAlignment="Left" Height="142" Margin="280,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="458" IsEnabled="False"/>
        <Button x:Name="btnSelectFilter" Content="Filter Options" HorizontalAlignment="Left" Margin="26,19,0,0" VerticalAlignment="Top" Width="84" Click="btnSelectFilter_Click"/>
        <CheckBox x:Name="chkActiveFilter" Content="Active Filter?" HorizontalAlignment="Left" Margin="128,25,0,0" VerticalAlignment="Top" Click="chkActiveFilter_Click"/>

    </Grid>
</UserControl>
