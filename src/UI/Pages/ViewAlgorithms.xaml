<UserControl
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:DIPS.UI.Controls" x:Class="DIPS.UI.Pages.ViewAlgorithms" 
      mc:Ignorable="d"
	Height="558.208" Width="1004.477">

    <Grid>
        <DataGrid SelectedItem="{Binding SelectedTechnique}" ItemsSource="{Binding AllTechniques}" HorizontalAlignment="Left" Height="237" Margin="30,68,0,0" VerticalAlignment="Top" Width="951" SelectionMode="Single" CanUserSortColumns="False"/>
        <Button Command="{Binding AddNewAlgorithmCommand}" Content="New" HorizontalAlignment="Left" Margin="907,323,0,0" VerticalAlignment="Top" Width="75"/>
        <Label HorizontalAlignment="Left" Margin="449,18,0,0" VerticalAlignment="Top"/>

        <Controls:infoBell HorizontalAlignment="Left" Margin="30,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.212,0.404" Height="33" Width="37" setText="Algorithms created are displayed below.  Double click an algorithm to view in the builder." />
        <Label Content="View an Existing Algorithm
               " HorizontalAlignment="Left" Margin="385,10,0,0" VerticalAlignment="Top" FontSize="22" Width="276"/>

    </Grid>
</UserControl>
