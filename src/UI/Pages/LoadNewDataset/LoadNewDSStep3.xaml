<UserControl x:Class="DIPS.UI.Pages.LoadNewDataset.LoadNewDSStep3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
	Width="540.299" Height="326.866">

    <Grid>
        <Label Content="Click to confirm that you want to forward with processing the following files and techniques:" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="520"/>
        <ListBox ItemsSource="{Binding ListOfFiles}" HorizontalAlignment="Left" Height="97" Margin="43,72,0,0" VerticalAlignment="Top" Width="195">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="125,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="297"><Run Language="en-gb" Text="Processing these files will take xx hours and xx minutes."/></TextBlock>
        <Button Command="{Binding ProcessFilesCommand}" Content="Process" HorizontalAlignment="Left" Margin="240,295,0,0" VerticalAlignment="Top" Width="75" />
        <ComboBox SelectedItem="{Binding PostProcessAction}" HorizontalAlignment="Left" Margin="283,236,0,0" VerticalAlignment="Top" Width="124">
            <ComboBoxItem Content="Nothing" IsSelected="True"/>
            <ComboBoxItem Content="Sleep"/>
            <ComboBoxItem Content="Shut down"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="140,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="138"><Run Language="en-gb" Text="What do I do when the processing is complete?"/></TextBlock>
        <Label Content="Files:" HorizontalAlignment="Left" Margin="123,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Techniques:" HorizontalAlignment="Left" Margin="358,46,0,0" VerticalAlignment="Top"/>
        <ListBox ItemsSource="{Binding ListOfTechniques}" Height="100" Margin="317,72,63,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
