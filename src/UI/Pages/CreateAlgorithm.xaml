<UserControl x:Class="DIPS.UI.Pages.CreateAlgorithm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
      xmlns:custom="clr-namespace:DIPS.UI.CustomControls;assembly=DIPS.UI.CustomControls"
      mc:Ignorable="d"
	Height="438.09" Width="961.478">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DIPS.UI.CustomControls;component/Resources/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Label x:Name="lblName" Content="Algorithm Name:" HorizontalAlignment="Left" Margin="210,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.33"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="311,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"
                 Text="{Binding Path=PipelineName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <GroupBox Header="Image Processing Techniques" HorizontalAlignment="Left" Height="365" Margin="27,63,0,0" VerticalAlignment="Top" Width="295">
            <ScrollViewer>
                <ListView
                    ItemsSource="{Binding Path=AvailableAlgorithms}"
                    Background="LightGray"
                    ItemContainerStyle="{StaticResource AlgorithmItemStyle}"
                    dd:DragDrop.IsDragSource="True"
                    dd:DragDrop.IsDropTarget="False" />
            </ScrollViewer>
        </GroupBox>
        <GroupBox Header="Algorithm" Margin="412,63,0,0" VerticalAlignment="Top" Height="365" HorizontalAlignment="Left" Width="303">
            <ScrollViewer>
                <ListView
                    ItemsSource="{Binding Path=SelectedProcesses, Mode=TwoWay}"
                    SelectedItem="{Binding Path=SelectedAlgorithm, Mode=TwoWay}"
                    Background="Lavender"
                    ItemContainerStyle="{StaticResource AlgorithmItemStyle}"
                    dd:DragDrop.IsDragSource="True"
                    dd:DragDrop.IsDropTarget="True" />
            </ScrollViewer>

        </GroupBox>
        <Button Content="Save" HorizontalAlignment="Left" Margin="488,20,0,0" VerticalAlignment="Top" Width="75" Command="{Binding SavePipeline}"/>
        <xctk:PropertyGrid Margin="766,63,10,10" IsManipulationEnabled="True"
                           SelectedObject="{Binding Path=SelectedAlgorithm.ParameterObject}"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="568,20,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding LoadPipeline}"/>
    </Grid>
</UserControl>
