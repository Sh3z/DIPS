<Page x:Class="DIPS.UI.Pages.CreateAlgorithm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d"
	Title="CreateAlgorithm" Height="438.09" Width="961.478">

    <Grid>
        <Label x:Name="lblName" Content="Algorithm Name:" HorizontalAlignment="Left" Margin="210,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.33"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="311,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>

        <GroupBox Header="Image Processing Techniques" HorizontalAlignment="Left" Height="365" Margin="27,63,0,0" VerticalAlignment="Top" Width="295">
            <ScrollViewer>
                <StackPanel x:Name="stackListOfAvailableTech" Grid.Column="1"
            Background="LightBlue"
            AllowDrop="True"
            DragOver="panel_DragOver"
            Drop="panel_Drop">
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
        <GroupBox Header="Algorithm" Margin="412,63,0,0" VerticalAlignment="Top" Height="365" HorizontalAlignment="Left" Width="303">
            <ScrollViewer>
                <StackPanel Grid.Column="2"
            Background="Lavender"
            AllowDrop="True"
            DragOver="panel_DragOver"
            Drop="panel_Drop" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
                </StackPanel>
            </ScrollViewer>

        </GroupBox>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="488,20,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <xctk:PropertyGrid x:Name="_propertyGrid" Margin="766,63,10,10"
                                     AutoGenerateProperties="True" IsManipulationEnabled="True"/>
    </Grid>
</Page>
