<Window x:Class="DIPS.UI.Pages.QueueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:DIPS.ViewModel.Converters;assembly=DIPS.ViewModel"
        Title="Queue" Height="317" Width="474" Margin="3">
    <Window.Resources>
        <Converters:BooleanNotConverter x:Key="BoolNotConverter" />
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="3" />
            <Setter Property="MinHeight" Value="20" />
        </Style>
        <Style TargetType="ListView">
            <Setter Property="Margin" Value="3" />
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True" Margin="3">
        <DockPanel DockPanel.Dock="Left">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" MinHeight="20">
                <RadioButton x:Name="QueuedRadioButton"
                             Content="Queued"
                             IsChecked="{Binding Path=IsPresentingQueued}" />
                <RadioButton Content="Complete"
                             IsChecked="{Binding Path=IsPresentingQueued, Converter={StaticResource BoolNotConverter}}" />
            </StackPanel>
            <ListView ItemsSource="{Binding Path=Entries}"
                      SelectedItem="{Binding Path=SelectedJob, Mode=TwoWay}" />
        </DockPanel>
        <Grid DataContext="{Binding Path=SelectedJob}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" MinHeight="20">
                <Button Content="Cancel" Margin="3" MinWidth="66" />
            </StackPanel>
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Path=Inputs}"
                      SelectedItem="{Binding Path=SelectedInput, Mode=TwoWay}" />
            <DockPanel  Grid.Row="2"
                        DataContext="{Binding Path=SelectedInput}">
                <ContentPresenter Content="{Binding Path=Identifier}"
                                  DockPanel.Dock="Top" MinHeight="20" />
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <Image Grid.Column="0" Source="{Binding Path=Input}" />
                    <Image Grid.Column="1" Source="{Binding Path=Output}" />
                </Grid>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
